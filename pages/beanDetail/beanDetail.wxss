/* pages/beanDetail/beanDetail.wxss */
/* 豆子详情页（只读模式）样式 */

page {
  height: 100%;
  width: 100%;
  background-color: #F9F7F5;
}

.page {
  height: 100vh;
  width: 100%;
  background-color: #F9F7F5;
  position: relative;
  overflow: hidden;
}

/* 加载中状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.loading-text {
  font-size: 28rpx;
  color: #888888;
}

/* 内容滚动区域 */
.content-scroll {
  height: 100vh;
  width: 100%;
}

/* 顶部分享按钮 */
.share-float {
  position: fixed;
  top: 32rpx;
  right: 32rpx;
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.92);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.12);
  z-index: 120;
}

.share-icon {
  font-size: 32rpx;
  color: #5A4632;
  transform: rotate(90deg);
  font-weight: 600;
}

/* 封面图区域 */
.cover-section {
  width: 100%;
  padding-top: 32rpx;
}

.cover-image-wrapper {
  width: 100%;
  height: 500rpx;
  background: linear-gradient(135deg, #f9f7f5 0%, #efe7dd 100%);
  position: relative;
  overflow: hidden;
}

.cover-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.cover-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cover-icon {
  font-size: 120rpx;
  color: #d6c8b8;
}

/* 标题区 */
.title-section {
  padding: 32rpx 32rpx 24rpx;
  background-color: #F9F7F5;
}

.bean-name {
  font-size: 40rpx;
  font-weight: 700;
  color: #333333;
  line-height: 1.4;
  margin-bottom: 12rpx;
}

.bean-origin {
  font-size: 28rpx;
  color: #888888;
  line-height: 1.5;
}

/* 标签模块 */
.tags-section {
  padding: 0 32rpx 24rpx;
  background-color: #F9F7F5;
}

.flavor-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.flavor-tag {
  padding: 12rpx 24rpx;
  background-color: #EFE8DA;
  border: 1rpx solid #D6B58F;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #5A4632;
}

/* 信息卡片 */
.info-card {
  margin: 0 32rpx 24rpx;
  padding: 32rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
}

/* 基础信息列表 */
.info-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 24rpx 32rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-label {
  font-size: 26rpx;
  color: #a58e77;
}

.info-value {
  font-size: 30rpx;
  color: #433024;
  font-weight: 600;
}

.bean-extra-placeholder {
  min-width: 24rpx;
  height: 24rpx;
}

/* 评分列表 */
.score-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.score-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.score-label {
  font-size: 28rpx;
  color: #333333;
}

.score-stars {
  display: flex;
  gap: 4rpx;
}

.star {
  font-size: 32rpx;
  color: #d0c6ba;
}

.star.active {
  color: #d6b58f;
}

/* 用户笔记 */
.notes-content {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.8;
  white-space: pre-wrap;
  word-break: break-word;
}

/* 发布信息 */
.publish-info {
  margin: 0 32rpx 48rpx;
  padding: 24rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  align-items: center;
}

.publish-user {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.publish-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: #f5f3ee;
}

.publish-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.publish-time {
  font-size: 24rpx;
  color: #888888;
}

/* 底部留白 */
.bottom-spacer {
  height: 48rpx;
}
