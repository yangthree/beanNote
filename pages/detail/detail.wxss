/* pages/detail/detail.wxss */

.page {
  position: relative;
  min-height: 100vh;
  background: linear-gradient(180deg, #f2efeb 0%, #f9f7f5 280rpx, #f9f7f5 100%);
  padding: 24rpx 32rpx 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.top-bar {
  position: fixed;
  top: 24rpx;
  left: 32rpx;
  right: 32rpx;
  z-index: 60;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(6rpx);
}

.back-area {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #333333;
  font-size: 28rpx;
}

.back-icon {
  font-size: 40rpx;
}

.top-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.action-btn {
  min-width: 120rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 32rpx;
  border: none;
  font-size: 26rpx;
  padding: 0 32rpx;
  box-sizing: border-box;
}

.action-btn::after {
  border: none;
}

.action-btn.ghost {
  background-color: rgba(214, 181, 143, 0.16);
  color: #8a673b;
}

.action-btn.primary {
  background: linear-gradient(135deg, #d6b58f 0%, #c9a57f 100%);
  color: #ffffff;
}

.action-btn.primary:active,
.action-btn.ghost:active {
  opacity: 0.85;
}

.type-tabs {
  display: flex;
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 12rpx;
  gap: 12rpx;
  position: fixed;
  top: 24rpx;
  left: 32rpx;
  right: 32rpx;
  z-index: 50;
}

/* 右上角发布按钮 */
.publish-btn {
  position: fixed;
  top: 24rpx;
  right: 32rpx;
  width: 88rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #d6b58f 0%, #c9a57f 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(214, 181, 143, 0.4);
  z-index: 60;
  transition: all 0.3s ease;
}

.publish-btn:active {
  transform: scale(0.95);
  opacity: 0.9;
}

.publish-icon {
  font-size: 40rpx;
  color: #ffffff;
  line-height: 1;
}

/* 测试用：清除登录状态按钮（开发阶段使用，上线前删除） */
.clear-login-btn {
  position: fixed;
  top: 140rpx;
  right: 32rpx;
  padding: 12rpx 24rpx;
  background-color: rgba(255, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 0, 0, 0.3);
  border-radius: 20rpx;
  z-index: 70;
}

.clear-login-text {
  font-size: 22rpx;
  color: #ff4444;
}

.scroll-area {
  position: absolute;
  top: 100rpx;
  bottom: 180rpx;
  left: 0;
  right: 0;
  padding: 0 32rpx;
  box-sizing: border-box;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #a58e77;
}

.tab-item.active {
  background-color: rgba(214, 181, 143, 0.22);
  color: #8a673b;
  font-weight: 600;
}

/* 内容滚动区域（位于 Tab 与底部按钮之间） */
.scroll-area {
  position: absolute;
  top: 140rpx;     /* 留出 Tab 的高度与间距 */
  bottom: 160rpx;  /* 给底部按钮预留空间 */
  left: 0;
  right: 0;
  padding: 0 32rpx;
  box-sizing: border-box;
}

.scroll-area ::-webkit-scrollbar {
  display: none;
}

.section-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 28rpx;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.06);
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 28rpx;
}

.form-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.form-item.full {
  grid-column: span 2;
}

.form-label {
  font-size: 26rpx;
  color: #666666;
}

.form-input {
  width: 100%;
  min-height: 84rpx;
  padding: 0 24rpx;
  border-radius: 20rpx;
  border: 2rpx solid #e5ded4;
  background-color: #ffffff;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #d6b58f;
}

.picker-item picker {
  width: 100%;
  display: block;
}

.picker-display {
  color: #333333;
  height: 84rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  text-align: left;
}

.input-with-unit {
  display: flex;
  align-items: center;
  position: relative;
}

.input-with-unit .form-input {
  padding-right: 80rpx;
}

.unit {
  position: absolute;
  right: 24rpx;
  color: #c0b6aa;
  font-size: 26rpx;
}

.ratio-card {
  grid-column: span 2;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 28rpx;
  border-radius: 20rpx;
  background-color: rgba(214, 181, 143, 0.12);
  color: #8a673b;
  font-size: 28rpx;
}

.ratio-label {
  font-weight: 600;
}

.ratio-value {
  font-weight: 700;
}

.flavors-block .form-input {
  margin-top: 16rpx;
}

.flavor-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag {
  display: inline-flex;
  align-items: center;
  gap: 10rpx;
  padding: 10rpx 20rpx;
  background-color: rgba(214, 181, 143, 0.18);
  color: #8a673b;
  border-radius: 999rpx;
  font-size: 24rpx;
}

.tag-remove {
  font-size: 26rpx;
}

.score-group {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx 24rpx;
}

.score-card {
  margin-top: 20rpx;
}

.score-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 18rpx 22rpx;
  background-color: rgba(249, 247, 245, 0.9);
  border-radius: 18rpx;
}

.score-label {
  font-size: 26rpx;
  color: #666666;
}

.score-stars {
  display: flex;
  gap: 10rpx;
}

.score-stars .star {
  font-size: 32rpx;
  color: #d0c6ba;
}

.score-stars .star.active {
  color: #d6b58f;
}

.textarea {
  width: 100%;
  min-height: 260rpx;
  padding: 24rpx;
  border-radius: 24rpx;
  border: 2rpx solid #e5ded4;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
  background-color: rgba(255, 255, 255, 0.96);
}

.textarea:focus {
  border-color: #d6b58f;
}

.login-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.35);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 99;
}

.login-dialog {
  width: 580rpx;
  background: #ffffff;
  border-radius: 32rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 16rpx 32rpx rgba(0, 0, 0, 0.12);
}

.login-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 20rpx;
}

.login-desc {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 32rpx;
}

/* 用户信息表单 */
.user-info-form {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  margin-bottom: 32rpx;
}

.avatar-section,
.nickname-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.form-label {
  font-size: 26rpx;
  color: #333333;
  font-weight: 600;
}

/* 头像选择按钮 */
.avatar-btn {
  display: flex; 
  align-items: center;
  gap: 20rpx;
  padding: 0;
  margin: 0;
  background-color: transparent;
  border: none;
}

.avatar-btn::after {
  border: none;
}

.avatar-preview-wrapper {
  width: 60rpx;
  height: 60rpx;
  border-radius: 60rpx;
  overflow: hidden;
  background-color: #f9f7f5;
  border: 2rpx dashed #d6b58f;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.avatar-preview {
  width: 100%;
  height: 100%;
  border-radius: 60rpx;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(214, 181, 143, 0.16);
  color: #8a673b;
}

.avatar-icon {
  font-size: 30rpx;
}

.avatar-text {
  font-size: 24rpx;
  color: #8a673b;
}

/* 昵称输入框 */
.nickname-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border-radius: 20rpx;
  border: 2rpx solid #e5ded4;
  background-color: #ffffff;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
}

.nickname-input:focus {
  border-color: #d6b58f;
}

.login-actions {
  margin-top: 0;
  display: flex;
  justify-content: center;
}

.login-btn {
  min-width: 160rpx;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
  border: none;
  font-size: 28rpx;
  padding: 0 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.login-btn::after {
  border: none;
}

.login-btn.ghost {
  background-color: rgba(214, 181, 143, 0.18);
  color: #8a673b;
}

.login-btn.primary {
  background: linear-gradient(135deg, #d6b58f 0%, #c9a57f 100%);
  color: #ffffff;
}

.login-btn.primary:active,
.login-btn.ghost:active {
  opacity: 0.9;
}

/* 发布确认弹窗 */
.publish-dialog {
  width: 580rpx;
  background: #ffffff;
  border-radius: 32rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 16rpx 32rpx rgba(0, 0, 0, 0.12);
}

.publish-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 20rpx;
  text-align: center;
}

.publish-desc {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
  text-align: center;
}

.publish-actions {
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.publish-btn-cancel,
.publish-btn-confirm {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
  border: none;
  font-size: 28rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}

.publish-btn-cancel::after,
.publish-btn-confirm::after {
  border: none;
}

.publish-btn-cancel {
  background-color: rgba(214, 181, 143, 0.18);
  color: #8a673b;
}

.publish-btn-confirm {
  background: linear-gradient(135deg, #d6b58f 0%, #c9a57f 100%);
  color: #ffffff;
}

.publish-btn-cancel:active,
.publish-btn-confirm:active {
  opacity: 0.9;
}

.footer-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 24rpx 32rpx 48rpx;
  background: linear-gradient(180deg, rgba(249, 247, 245, 0) 0%, rgba(249, 247, 245, 0.95) 40%, #f9f7f5 100%);
  box-shadow: 0 -6rpx 18rpx rgba(0, 0, 0, 0.08);
}

.primary-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  border: none;
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 600;
  background: linear-gradient(135deg, #d6b58f 0%, #c9a57f 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.primary-btn::after {
  border: none;
}

.primary-btn:active {
  opacity: 0.9;
}
