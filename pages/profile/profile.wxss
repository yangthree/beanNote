.page {
  min-height: 100vh;
  padding: 32rpx;
  background: #f9f7f5;
  box-sizing: border-box;
}

.user-card {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: #ffffff;
  border-radius: 32rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.06);
  gap: 24rpx;
}

.avatar-wrapper {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #f3eee6;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.avatar {
  width: 100%;
  height: 100%;
}

.avatar.placeholder {
  font-size: 40rpx;
  color: #b39d88;
}

.user-meta {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.nickname {
  font-size: 32rpx;
  font-weight: 700;
  color: #333333;
}

.tips {
  font-size: 24rpx;
  color: #888888;
}

.login-btn {
  border-radius: 999rpx;
  background: linear-gradient(135deg, #d6b58f, #c49b73);
  color: #ffffff;
  border: none;
  padding: 0 32rpx;
}

.login-btn::after {
  border: none;
}

.section-card {
  margin-top: 32rpx;
  background: #ffffff;
  border-radius: 28rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.04);
}

.section-card.secondary {
  background: #f4efe9;
  box-shadow: none;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #604832;
  margin-bottom: 16rpx;
}

.entry-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.entry-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #f9f7f5;
  border-radius: 24rpx;
  padding: 24rpx 28rpx;
  transition: transform 0.2s, box-shadow 0.2s;
}

.entry-item:active {
  transform: scale(0.98);
  box-shadow: inset 0 0 0 2rpx rgba(214, 181, 143, 0.4);
}

.entry-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.entry-title {
  font-size: 28rpx;
  color: #333333;
  font-weight: 600;
}

.entry-desc {
  font-size: 24rpx;
  color: #8a7c6a;
}

.entry-arrow {
  font-size: 40rpx;
  color: #c5b7a6;
}

.tips-text {
  font-size: 24rpx;
  color: #7a6a58;
  line-height: 1.6;
}

