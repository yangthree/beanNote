/* pages/batchUpload/batchUpload.wxss */
.container {
  min-height: 100vh;
  background: #F9F7F5;
  padding: 32rpx;
}

.header {
  margin-bottom: 32rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #888;
}

/* 统计卡片 */
.stats-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #888;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.stat-value.success {
  color: #52c41a;
}

.stat-value.fail {
  color: #ff4d4f;
}

/* 操作按钮 */
.actions {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
}

.btn::after {
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #d6b58f 0%, #c9a57f 100%);
  color: #fff;
}

.btn-primary[disabled] {
  background: #d0c6ba;
  color: #fff;
  opacity: 0.6;
}

.btn-secondary {
  background: #f5f3ee;
  color: #8a673b;
}

.btn-secondary[disabled] {
  opacity: 0.6;
}

/* 进度卡片 */
.progress-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.progress-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 600;
}

.progress-bar {
  width: 100%;
  height: 16rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #d6b58f 0%, #c9a57f 100%);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

/* 日志卡片 */
.log-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  height: 600rpx;
  display: flex;
  flex-direction: column;
}

.log-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.log-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.clear-log {
  font-size: 24rpx;
  color: #8a673b;
  padding: 8rpx 16rpx;
}

.log-content {
  flex: 1;
  overflow-y: auto;
}

.log-item {
  display: flex;
  gap: 16rpx;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 24rpx;
  line-height: 1.6;
}

.log-item:last-child {
  border-bottom: none;
}

.log-time {
  color: #888;
  min-width: 120rpx;
}

.log-message {
  color: #333;
  flex: 1;
}

.log-empty {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
  font-size: 26rpx;
}

/* 导入对话框 */
.import-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.import-dialog {
  width: 100%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.import-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.import-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 24rpx;
  line-height: 1.5;
}

.import-textarea {
  flex: 1;
  min-height: 400rpx;
  max-height: 500rpx;
  padding: 20rpx;
  border: 2rpx solid #e5ded4;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #333;
  background: #fafafa;
  margin-bottom: 24rpx;
}

.import-actions {
  display: flex;
  gap: 16rpx;
}

.import-btn-cancel,
.import-btn-confirm {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.import-btn-cancel::after,
.import-btn-confirm::after {
  border: none;
}

.import-btn-cancel {
  background: #f5f3ee;
  color: #8a673b;
}

.import-btn-confirm {
  background: linear-gradient(135deg, #d6b58f 0%, #c9a57f 100%);
  color: #fff;
}

