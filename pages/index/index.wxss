/* pages/index/index.wxss */

/* ===== 页面结构 ===== */
.page {
  min-height: 100vh;
  padding: 48rpx 32rpx 200rpx;
  background: linear-gradient(180deg, #f2efeb 0%, #f9f7f5 220rpx, #f9f7f5 100%);
  box-sizing: border-box;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #333333;
}

.header-action {
  font-size: 32rpx;
  color: #c0b6aa;
}

/* ===== 搜索框 ===== */
.search-container {
  position: relative;
  margin-bottom: 40rpx;
}

.search-icon {
  position: absolute;
  top: 50%;
  left: 32rpx;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #888888;
  pointer-events: none;
}

.search-input {
  width: 100%;
  height: 88rpx;
  padding: 0 32rpx 0 88rpx;
  border-radius: 44rpx;
  background-color: #ffffff;
  border: 2rpx solid #e5ded4;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333333;
}

.search-input:focus {
  border-color: #d6b58f;
}

/* ===== 筛选控件 ===== */
.filter-container {
  display: flex;
  gap: 16rpx;
  margin-bottom: 40rpx;
  padding: 8rpx;
  background-color: #f5f3ee;
  border-radius: 24rpx;
}

.filter-item {
  flex: 1;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  font-size: 28rpx;
  color: #888888;
  border-radius: 16rpx;
  background-color: transparent;
  transition: all 0.2s ease;
}

.filter-item.active {
  background-color: #ffffff;
  color: #8a673b;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

/* ===== 空态 ===== */
.empty-state {
  padding: 120rpx 32rpx;
  text-align: center;
  color: #888888;
}

.empty-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  text-align: center;
  margin-bottom: 16rpx;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 36rpx;
  color: #c0b6aa;
}

/* ===== 列表格栅 ===== */
.bean-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  gap: 24rpx 0;
}

.bean-card {
  width: calc(50% - 12rpx);
  background-color: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.bean-card:active {
  transform: scale(0.98);
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.12);
}

/* ===== 图片区域 ===== */
.bean-image-wrapper {
  position: relative;
  width: 100%;
  height: 280rpx;
  background: linear-gradient(135deg, #f9f7f5 0%, #efe7dd 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.bean-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.bean-image-placeholder {
  font-size: 80rpx;
  color: #d6c8b8;
}

.bean-badge {
  position: absolute;
  top: 24rpx;
  left: 24rpx;
  height: 30rpx;
  padding: 10rpx 20rpx;
  background-color: rgba(214, 181, 143, 0.9);
  color: #ffffff;
  font-size: 22rpx;
  border-radius: 999rpx;
}

.bean-price {
    position: absolute;
    top: 24rpx;
    right: 24rpx;
    height: 30rpx;
    padding: 10rpx 20rpx;
    background-color: rgba(214, 181, 143, 0.9);
    color: #ffffff;
    font-size: 22rpx;
    border-radius: 999rpx;
  }

/* ===== 内容区域 ===== */
.bean-content {
  padding: 28rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  flex: 1;
}

.bean-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.bean-name {
  flex: 1;
  font-size: 28rpx;
  font-weight: 700;
  color: #333333;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.bean-brand {
  max-width: 50%;
  font-size: 26rpx;
  color: #888888;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: right;
}

.bean-info-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
  font-size: 24rpx;
  color: #a58e77;
}

.price-row {
  justify-content: flex-start;
}

.bean-origin,
.bean-process {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.bean-process {
  color: #8a754f;
}

.bean-rating {
  display: flex;
  align-items: center;
  gap: 4rpx;
  font-size: 24rpx;
  color: #d6b58f;
}

.star {
  color: #d6b58f;
  font-size: 24rpx;
}

.rating-value {
  font-size: 26rpx;
  font-weight: 600;
  color: #a4723a;
}

.bean-date {
  flex-shrink: 0;
  color: #c0b6aa;
}

/* ===== 悬浮按钮 ===== */
.fab {
  position: fixed;
  right: 48rpx;
  bottom: 80rpx;
  width: 120rpx;
  height: 120rpx;
  background-color: #d6b58f;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 56rpx;
  box-shadow: 0 12rpx 32rpx rgba(166, 128, 80, 0.35);
  z-index: 99;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.fab:active {
  transform: scale(0.95);
  box-shadow: 0 8rpx 20rpx rgba(166, 128, 80, 0.4);
}

.fab-icon {
  line-height: 1;
}
