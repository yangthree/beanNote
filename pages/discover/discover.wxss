/* pages/discover/discover.wxss */
/* 发现页样式：展示所有用户发布的咖啡豆记录 */

/* 页面根元素：确保页面铺满整个屏幕 */
page {
  height: 100%;
  width: 100%;
  /* ===== 调试模式：取消下面的注释来查看容器边界 ===== */
  /* border: 4rpx solid red !important; */
  /* background-color: rgba(255, 0, 0, 0.05) !important; */
}

.page {
  height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  margin: 0;
  background: linear-gradient(180deg, #f2efeb 0%, #f9f7f5 220rpx, #f9f7f5 100%);
  box-sizing: border-box;
  overflow: hidden;
  position: relative;
  /* ===== 调试模式：取消下面的注释来查看容器边界 ===== */
  /* border: 4rpx solid blue !important; */
  /* background-color: rgba(0, 0, 255, 0.05) !important; */
}

/* ===== 搜索框 ===== */
.search-container {
  position: relative;
  padding: 48rpx 32rpx 24rpx;
  background-color: transparent;
}

.search-icon {
  position: absolute;
  top: 55%;
  left: 86rpx; /* 32rpx (容器padding) + 44rpx (输入框padding-left的一半，88rpx/2) */
  transform: translate(-50%, -50%); /* 水平和垂直都居中 */
  font-size: 32rpx;
  color: #888888;
  pointer-events: none;
  z-index: 1;
}

.search-input {
  width: 100%;
  height: 88rpx;
  padding: 0 32rpx 0 88rpx;
  border-radius: 44rpx;
  background-color: #ffffff;
  border: 2rpx solid #e5ded4;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333333;
}

.search-input:focus {
  border-color: #d6b58f;
}

/* ===== 筛选控件 ===== */
.filter-container {
  display: flex;
  gap: 16rpx;
  padding: 0 32rpx 24rpx;
  background-color: transparent;
}

.filter-item {
  flex: 1;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  font-size: 28rpx;
  color: #888888;
  border-radius: 16rpx;
  background-color: #f5f3ee;
  transition: all 0.2s ease;
}

.filter-item.active {
  background-color: #ffffff;
  color: #8a673b;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.rating-filter-container {
  padding: 0 32rpx 24rpx;
}

.rating-filter-scroll {
  width: 100%;
  white-space: nowrap;
}

.rating-filter-options {
  display: flex;
  flex-wrap: nowrap;
  gap: 12rpx;
  padding-bottom: 8rpx;
}

.rating-filter-item {
  padding: 14rpx 26rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  color: #8a673b;
  background-color: #f5f3ee;
  border: 1rpx solid transparent;
  transition: all 0.2s ease;
}

.rating-filter-item.active {
  background-color: #ffffff;
  border-color: #d6b58f;
  color: #8a673b;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

/* 空状态 */
.empty-state {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #888888;
  text-align: center;
  line-height: 1.6;
}

/* 发现列表 */
.discover-list {
  position: absolute;
  top: 340rpx; /* 搜索框 + 筛选控件高度 + padding + 评分筛选 */
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  padding: 0 32rpx 0rpx;
  box-sizing: border-box;
}

/* ===== 列表格栅 ===== */
.bean-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  gap: 24rpx 0;
}

.bean-card {
  width: calc(50% - 12rpx);
  background-color: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.bean-card:active {
  transform: scale(0.98);
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.12);
}

/* ===== 用户信息区域（底部） ===== */
.user-info-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx 24rpx;
  border-top: 1rpx solid #f2efeb;
  margin-top: auto;
}

.user-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #f5f3ee;
  flex-shrink: 0;
}

.user-info-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  min-width: 0;
}

.user-name {
  font-size: 24rpx;
  color: #333333;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.publish-time {
  font-size: 20rpx;
  color: #888888;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* ===== 图片区域 ===== */
.bean-image-wrapper {
  position: relative;
  width: 100%;
  height: 280rpx;
  background: linear-gradient(135deg, #f9f7f5 0%, #efe7dd 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.bean-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.bean-image-placeholder {
  font-size: 80rpx;
  color: #d6c8b8;
}

.bean-badge {
  position: absolute;
  top: 24rpx;
  left: 24rpx;
  height: 30rpx;
  padding: 10rpx 20rpx;
  background-color: rgba(214, 181, 143, 0.9);
  color: #ffffff;
  font-size: 22rpx;
  border-radius: 999rpx;
}

.bean-price-badge {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  height: 30rpx;
  padding: 10rpx 20rpx;
  background-color: rgba(214, 181, 143, 0.9);
  color: #ffffff;
  font-size: 22rpx;
  border-radius: 999rpx;
}

/* ===== 内容区域 ===== */
.bean-content {
  padding: 28rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  flex: 1;
}

.bean-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.bean-name {
  flex: 1;
  font-size: 28rpx;
  font-weight: 700;
  color: #333333;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.bean-brand {
  max-width: 50%;
  font-size: 26rpx;
  color: #888888;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: right;
}

.bean-info-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
  font-size: 24rpx;
  color: #a58e77;
}


.bean-origin,
.bean-process {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.bean-process {
  color: #8a754f;
}

.bean-rating {
  display: flex;
  align-items: center;
  gap: 4rpx;
  font-size: 24rpx;
  color: #d6b58f;
}

.star {
  color: #d6b58f;
  font-size: 24rpx;
}

.rating-value {
  font-size: 26rpx;
  font-weight: 600;
  color: #a4723a;
}

.bean-extra-placeholder {
  min-width: 24rpx;
  height: 24rpx;
}


.user-info-footer {
  padding: 24rpx 28rpx 28rpx;
  border-top: 1rpx solid #f2efeb;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx 0;
  font-size: 26rpx;
  color: #888888;
}

/* 加载中 */
.loading {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  font-size: 28rpx;
  color: #888888;
}

/* ===== 登录弹窗样式 ===== */
.login-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.35);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 99;
}

.login-dialog {
  width: 580rpx;
  background: #ffffff;
  border-radius: 32rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 16rpx 32rpx rgba(0, 0, 0, 0.12);
}

.login-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 20rpx;
}

.login-desc {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 32rpx;
}

/* 用户信息表单 */
.user-info-form {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  margin-bottom: 32rpx;
}

.avatar-section,
.nickname-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.user-info-form .form-label {
  font-size: 26rpx;
  color: #333333;
  font-weight: 600;
}

/* 头像选择按钮 */
.avatar-btn {
  display: flex; 
  align-items: center;
  gap: 20rpx;
  padding: 0;
  margin: 0;
  background-color: transparent;
  border: none;
}

.avatar-btn::after {
  border: none;
}

.avatar-preview-wrapper {
  width: 60rpx;
  height: 60rpx;
  border-radius: 60rpx;
  overflow: hidden;
  background-color: #f9f7f5;
  border: 2rpx dashed #d6b58f;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.avatar-preview {
  width: 100%;
  height: 100%;
  border-radius: 60rpx;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(214, 181, 143, 0.16);
  color: #8a673b;
}

.avatar-icon {
  font-size: 30rpx;
}

.avatar-text {
  font-size: 24rpx;
  color: #8a673b;
}

/* 昵称输入框 */
.nickname-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border-radius: 20rpx;
  border: 2rpx solid #e5ded4;
  background-color: #ffffff;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
}

.nickname-input:focus {
  border-color: #d6b58f;
}

.login-actions {
  margin-top: 0;
  display: flex;
  justify-content: center;
}

.login-btn {
  min-width: 160rpx;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
  border: none;
  font-size: 28rpx;
  padding: 0 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.login-btn::after {
  border: none;
}

.login-btn.primary {
  background: linear-gradient(135deg, #d6b58f 0%, #c4a077 100%);
  color: #ffffff;
  font-weight: 600;
}

.login-btn.primary:active {
  opacity: 0.8;
}

