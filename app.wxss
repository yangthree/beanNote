/**app.wxss**/
page {
  background-color: #F5F5DC;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 20rpx;
  min-height: 100vh;
}

/* 通用卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 通用按钮样式 */
.btn-primary {
  background-color: #8B4513;
  color: #ffffff;
  border-radius: 8rpx;
  padding: 20rpx;
  text-align: center;
  font-size: 32rpx;
}

.btn-primary:active {
  background-color: #6B3410;
}

/* 通用输入框样式 */
.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 10rpx;
  display: block;
}

.input-field {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.input-field:focus {
  border-color: #8B4513;
}

/* 评分样式 */
.rating-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.rating-stars {
  display: flex;
  gap: 10rpx;
}

.star {
  width: 40rpx;
  height: 40rpx;
  color: #D3D3D3;
  font-size: 40rpx;
}

.star.active {
  color: #FFD700;
}

/* 标签样式 */
.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-top: 10rpx;
}

.tag {
  background-color: #F0E68C;
  color: #8B4513;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 类型标签 */
.type-tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.type-tag.pour-over {
  background-color: #E8F5E9;
  color: #2E7D32;
}

.type-tag.espresso {
  background-color: #FFF3E0;
  color: #E65100;
}

