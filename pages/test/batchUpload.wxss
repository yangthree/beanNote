/* pages/test/batchUpload.wxss */
.container {
  padding: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  line-height: 1.6;
}

.upload-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #d6b58f 0%, #c9a57f 100%);
  color: #fff;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
}

.upload-btn::after {
  border: none;
}

.result {
  margin-top: 40rpx;
  padding: 30rpx;
  background: #f9f7f5;
  border-radius: 20rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.result-item {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.result-item.success {
  color: #52c41a;
}

.result-item.fail {
  color: #ff4d4f;
}

